# AWS S3 Configuration
BUCKET_NAME=your-bucket-name
REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
DOWNLOAD_URL_TIME_LIMIT=15
PAGINATION_PAGE_SIZE=100

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# App URL / branding (used in auth and invite emails)
APP_BASE_URL=http://localhost:3000
APP_NAME=Orka File Service

# Mail configuration
# MAIL_FROM is required to send emails
MAIL_FROM=Orka File Service <no-reply@your-domain.com>

# Recommended failover chain (left -> right fallback order)
# Supported values: resend,sendgrid
MAIL_PROVIDERS=resend,sendgrid

# Provider-specific credentials for chain mode
RESEND_API_KEY=your-resend-api-key
RESEND_API_URL=
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_API_URL=

# Server Configuration
PORT=8080
